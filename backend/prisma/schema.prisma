generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id        String    @id @default(cuid())
  nombre    String
  correo    String  @unique
  password String
  clientes Cliente[]
}


model Cliente {
  id        String     @id @default(cuid())
  nombre    String
  apellido  String
  cedula    Int @unique
  telefono  String
  correo    String
  direccion String
  prestamos Prestamo[]
  usuarioId String
  usuario   Usuario   @relation(fields: [usuarioId], references: [id])
}

model Prestamo {
  id             Int      @id @default(autoincrement())
  monto          Float
  cuotas         Int
  interes        Float
  fechaInicio    DateTime
  frecuenciaPago String
  nota           String?   // Campo opcional
  clienteId      String
  cliente        Cliente  @relation(fields: [clienteId], references: [id])
  pagos          Pago[]
}

model Pago {
  id         Int     @id @default(autoincrement())
  fecha      DateTime
  monto      Float
  prestamoId Int
  prestamo   Prestamo @relation(fields: [prestamoId], references: [id])
}
